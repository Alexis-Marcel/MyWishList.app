{% extends 'templates/app.twig' %}

{% block content %}

    <h2 class="mt-4">Reserve the item : {{ value.nameItem }}</h2>
    <form action="{{ path_for('item.reservation',{'secureToken' : value.token, 'id' : value.id}) }}" method="post" autocomplete="off">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Message</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Your name" id="name" autocomplete="off">
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input type="text" name="message" class="form-control" placeholder="Your personalized message" id="message" autocomplete="off">
                    </div>
                </td>
            </tr>

            </tbody>
        </table>
        <div class="float-end">
            <a id="add-btn" type="button" class="btn mt-4 align-items-end" href="{{path_for('item',{'secureToken' : value.token,'id' : value.id})}}">Cancel</a>
            <input id="add-btn" type="submit" class="btn mt-4 align-items-end" value="Reserve this item"/>
        </div>
        {{ csrf.field | raw}}
    </form>
{% endblock %}